{
  "name": "web-launcher",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "description": "A web launcher for streaming service with tweaks to work with TV remote",
  "author": "John Nguyen <john.nguyen09@outlook.com>",
  "license": "MIT",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet",
    "lint:fix": "npm run lint -- --fix",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
    "preview": "vite preview",
    "pree2e": "vite build --mode=test",
    "type-check": "tsc",
    "e2e": "playwright test"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.3",
    "@noriginmedia/norigin-spatial-navigation": "^1.1.5",
    "@playwright/test": "^1.31.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "classnames": "^2.3.2",
    "electron": "github:castlabs/electron-releases#v19.0.9+wvcus",
    "electron-builder": "^23.6.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.8.1",
    "react-router-dom": "^6.8.1",
    "sass": "^1.58.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-electron-plugin": "^0.8.2",
    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-electron-renderer": "^0.12.1",
    "vite-plugin-svgr": "^2.4.0"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  }
}
